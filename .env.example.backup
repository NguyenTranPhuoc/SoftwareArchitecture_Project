# Server Configuration
PORT=5000
NODE_ENV=development

# PostgreSQL Database (User data)
DATABASE_URL=postgresql://postgres:password@localhost:5432/zalo_db
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password
DB_NAME=zalo_db

# MongoDB (Chat messages)
MONGODB_URI=mongodb://localhost:27017/zalo_chat
MONGODB_DB_NAME=zalo_chat

# Redis (Caching & Sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d

# Google Cloud Storage (File uploads)
GCS_PROJECT_ID=your_project_id
GCS_BUCKET_NAME=zalo-user-uploads
GCS_KEY_FILE=./service-account-key.json

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:19006

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
