{
  "name": "zalo-clone",
  "version": "1.0.0",
  "description": "A real-time messaging application - Software Architecture Project",
  "main": "dist/server.js",
  "scripts": {
    "dev:server": "ts-node-dev --respawn --transpile-only src/server/server.ts",
    "build:server": "tsc -p tsconfig.server.json",
    "start:server": "node dist/server.js",
    "dev:client": "cd src/client && npm run dev",
    "test": "jest",
    "lint": "eslint . --ext .ts,.tsx"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/NguyenTranPhuoc/SoftwareArchitecture_Project.git"
  },
  "keywords": [
    "zalo",
    "messaging",
    "chat",
    "real-time",
    "websocket",
    "react",
    "typescript"
  ],
  "author": "Software Architecture Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.5.4",
    "pg": "^8.11.3",
    "mongodb": "^6.3.0",
    "redis": "^4.6.11",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1",
    "@google-cloud/storage": "^7.7.0"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "@types/node": "^20.10.6",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/bcrypt": "^5.0.2",
    "@types/multer": "^1.4.11",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11",
    "nodemon": "^3.0.2"
  }
}