# =================================
# Zalo Clone - Environment Variables
# =================================
# Copy this file to .env and update values
# IMPORTANT: Never commit .env to git!

# =================================
# SERVER CONFIGURATION
# =================================
NODE_ENV=development
PORT=5000

# =================================
# CORS CONFIGURATION
# =================================
# Comma-separated list of allowed origins
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# =================================
# MONGODB DATABASE
# =================================
# Used for: Chat messages and conversations
MONGO_URI=mongodb://localhost:27017/zalo_clone

# MongoDB Atlas connection (for production)
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/zalo_clone?retryWrites=true&w=majority

# =================================
# REDIS CACHE
# =================================
# Used for: Session management, caching, real-time state
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Redis connection URL (alternative to individual settings)
# REDIS_URL=redis://localhost:6379

# =================================
# JWT AUTHENTICATION
# =================================
# Secret key for JWT token signing (generate a random string)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# =================================
# SESSION SETTINGS
# =================================
SESSION_SECRET=your_session_secret_change_this
SESSION_MAX_AGE=86400000
# 24 hours in milliseconds

# =================================
# DEVELOPMENT SETTINGS
# =================================
# Enable detailed error messages in development
DEV_ERROR_DETAILS=true

# Enable request logging
DEV_LOG_REQUESTS=true
